{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "generateOptions": {
    "spec": false
  },
  "projects": {
    "dal": {
      "type": "library",
      "root": "libs/dal",
      "entryFile": "index",
      "sourceRoot": "libs/dal/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dal/tsconfig.lib.json"
      }
    },
    "infrastructure": {
      "type": "library",
      "root": "libs/infrastructure",
      "entryFile": "index",
      "sourceRoot": "libs/infrastructure/src",
      "compilerOptions": {
        "tsConfigPath": "libs/infrastructure/tsconfig.lib.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "worker": {
      "type": "application",
      "root": "apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker/tsconfig.app.json"
      }
    },
    "discord-bot": {
      "type": "application",
      "root": "apps/discord-bot",
      "entryFile": "main",
      "sourceRoot": "apps/discord-bot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/discord-bot/tsconfig.app.json"
      }
    }
  }
}
