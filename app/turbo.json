{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/*"],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false
    }
  }
}
