{
  "name": "wfs-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "concurrently --names \"API,BOT,WORKER\" \"pnpm start:dev api\" \"pnpm start:dev discord-bot\" \"pnpm start:dev worker\"",
    "deploy": "turbo run deploy --concurrency=4",
    "upgrade": "npx npm-check-updates -u",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"microservices/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:sharding": "node ./dist/microservices/discord-bot/microservices/discord-bot/src/shard-manager.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/microservices/app/main",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "cd ../ && husky install",
    "pre-commit": "lint-staged",
    "migration:up": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d libs/shared/src/configs/ormconfig.ts",
    "migration:down": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d libs/shared/src/configs/ormconfig.ts",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate --pretty -d libs/shared/src/configs/ormconfig.ts"
  },
  "dependencies": {
    "@discordjs/proxy": "^2.1.1",
    "@globalart/nest-swagger": "^1.1.1",
    "@globalart/nestcord": "^1.8.7",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/microservices": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cache-manager": "^5.7.6",
    "cache-manager-ioredis-yet": "^2.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "deepmerge": "^4.3.1",
    "discord.js": "^14.16.2",
    "https-proxy-agent": "^7.0.5",
    "husky": "^9.1.6",
    "install": "^0.13.0",
    "ioredis": "^5.4.1",
    "lint-staged": "^15.2.10",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "nestjs-cls": "^4.4.1",
    "node-global-proxy": "^1.0.1",
    "number-format.js": "^2.0.9",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.10",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.5.0",
    "undici": "^6.19.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.16.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --max-warnings 0"
    ]
  }
}
